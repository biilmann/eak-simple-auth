
{{#if session.isAuthenticated}}

You are now logged in as  
{{email}}

{{else}}
<div class="login-registration">
  <div class="page-header">
    <h3>Sign Up</h3>
  </div>
  
  <div class="regerror"></div>

  <form {{action 'register' on='submit'}}>
    <div class="form-group">
      <label for="identification">Email</label>
      {{input id='identification' placeholder='Enter Login' class='form-control' value=email}}

    </div>
    <div class="form-group">
      <label for="password">Password</label>
      {{input id='password' placeholder='Enter Password' class='form-control' type='password' value=password}}
    </div>
    <button type="submit" class="btn btn-default">Create Your Account</button>
  </form>
   
  <hr>
  <span class="left">
    Already have an account?
  </span>
  {{#link-to "login" class="padding-left-5px left"}}Log In{{/link-to}}
  
</div>


{{/if}}